        .Discover{width: 100%; background-color: white;height: 100px; margin-top: 5%;}
        .WM_Logo{width: 90%; margin-left: 5%;}
        .Dis_Some{width: 90%; margin-right: 0%;}
        .Dis_Some_Con{width: fit-content;margin-left: 60%;border: 1px solid black;display: flex; justify-content: flex-end; height: 20%;}
        .something input, .search button{border: none; letter-spacing: 0.1em;}
        .something input{width: 100%;}
        .search button{background-color: white;}
        .menus{width: 100%;}
        .Members_join{text-align: center;background: #f4faf8; height: 72px;}
